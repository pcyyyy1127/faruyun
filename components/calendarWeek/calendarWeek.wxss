/* components/calendarWeek/calendarWeek.wxss */
.date-choose {
  background: #fff;
  overflow: hidden;
  height: auto;
  width: 96vw;
  height: 20vh;
  border-radius: 20px;
  overflow: hidden; 
  margin: 17vh 0 0 0;
  -webkit-box-shadow:  0px px 5px 5px rgba(0, 0, 0, 0.15);
  -moz-box-shadow:  0px 3px 5px 5px rgba(0, 0, 0, 0.15);
  box-shadow: 0px 3px 5px 5px rgba(49, 49, 49, 0.15);
}
.time_sign{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-wrap: wrap;
}
.time_sign image{
  width: 70rpx;
  height: 70rpx;
}
.data-month {
  width: 100%;
  align-items: center;
  padding: .35rem .35rem;
  text-align: center;
  color: #D09363;
  font-size: 38rpx;
}
.date-choose-swiper {
  flex-grow: 1;
  height: 145rpx;
}
.swiper-item {
  display: flex;
  flex-direction: column;
}
.weekday, .dateday {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  flex-wrap: wrap;
  flex-grow: 1;
 
}
.week, .day {
  width: 14.286%;
  flex-basis: 14.286%;
}
.week{
  color: #913D3F;
  font-size: 24rpx;
}
.day text {
  position: relative;
  color: #333333;
}
.day .active:before {/* 圈圈 */
  content: "";
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border: 1px solid #913D3F;
  border-radius: 100%;
  background: #913D3F;
  opacity: 0.1;
  z-index: -1;
}
.day text.active {
  color: rgb(247, 138, 138)
}
.day text.reds {
  color: #f04b4b;
}
