/* pages/sleep.wxss */
.sleepcontainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.card{
  width: 90vw;
  align-self: center;
  border-radius:14rpx;
  box-shadow: 0px 3px 6px #cdcfcf;
  border: 1px solid #D5B5B6;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}
.cardA{
  display: flex;
  flex-direction: row;
  align-self: center;
}
.clock{
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}
.clock text{
  width: 50rpx;
  background-color: #913D3F;
  color: white;
  border-radius: 8rpx;
  font-size: 20rpx;
  padding: 0 15rpx 0 15rpx;
  margin-left: 10rpx;
}
.clock image{
  width: 30rpx;
  height: 30rpx;
}
.clockdetail{
  display: flex;
  flex-direction: row;
  margin-top: 35rpx;
}
.signbox{
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 25rpx;
  color: #913D3F;
}
.signed {
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  justify-content: center;
  align-items: center;
  border: #913D3F 1px solid;
  margin: 10rpx 80rpx 0 80rpx;
  font-size: 40rpx;
  color: #fff;
  background-color: #913D3F;
}
.sign{
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  justify-content: center;
  align-items: center;
  border: #913D3F 1px solid;
  margin: 10rpx 80rpx 0 80rpx;
  font-size: 40rpx;
  background-color: #fff;
  color: #913D3F;
}

.txt{
  align-self: center;
  font-size: 20rpx;
  color: #913D3F;
  margin-top: 35rpx;
}
.cardB{
  width: 66vw;
  align-self: center;
  border-radius:14rpx;
  box-shadow: 0px 3px 6px #cdcfcf;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  position: relative;
}
.wordimg{
  width:66vw;
  height: 20vh;
  border-radius: 14rpx 14rpx 0 0;
}
.txtcontent{
  font-size: 25rpx;
  color:gray;
  margin:40rpx;
  line-height: 20px;
  margin-bottom: 100rpx;
}
.yaya{
  font-size: 20rpx;
  color:gray;
  align-self: center;
  position: absolute;
  bottom: 10rpx;
}
.imgbox{
  width: 200rpx;
  height: 200rpx;
  align-self: center;
  margin: 50rpx 50rpx 80rpx 50rpx;
}
.musicimg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  position: absolute;
  z-index: -1;
}
.playicon{
  z-index: 2;
  width:60rpx;
  height: 60rpx;
  margin:75rpx 0 0 75rpx
}

.audio-box {
  width: 128rpx;
  height: 128rpx;
  display: flex;
  overflow: hidden;
  align-self: center;
  margin:60rpx 0 100rpx 0;
  border-radius: 100%;
}

.pickerbox{
  position: fixed;
  z-index: 99;
  bottom: 0;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  border-radius: 20rpx;
  padding-top: 25rpx;
  border: 1px solid #e1e1e1;
  background-color: #fff;
  z-index: 99;
}
.picker-box-hide {
  width: 100%;
  height: 100vh;
  position: fixed;
  z-index: 1;
  background-color:  rgba(0, 0, 0, 0.1);
}
.confirmpicker{
  position: absolute;
  right: 30rpx;
  color: #913D3F;
}
.cancelpicker{
  position: absolute;
  left: 30rpx;
}
