/**index.wxss**/
.back{
  position: absolute;
  width: 100%;
  height: 30vh;
  border-radius: 0  0 120rpx 120rpx ;
  background-color: #913D3F;
  z-index: -1;
}

.home-box{
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.channalCon{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 10rpx 0;
  width: 100%;
}
.channal{
  width: 33.3%;
  height: 100rpx;
  -webkit-box-shadow:  0px px 5px 5px rgba(0, 0, 0, 0.15);
  -moz-box-shadow:  0px 3px 5px 5px rgba(0, 0, 0, 0.15);
  box-shadow: 0px 3px 5px 5px rgba(49, 49, 49, 0.15);
  border-radius: 50%;
  overflow: hidden; 
  background-color: #EFEDF0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}
.channalPic{
  width: 90%;
  height:80rpx;
}
.class_text{
  font-family: Microsoft YaHei;
  font: 1em sans-serif;
  font-size-adjust: none;
}
.mokuai{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  align-self: start;
  width: 100%;
}
.yellow{
  width: 2%;
  height: auto;
}

.position_1{
  text-align: center;
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.channalText{
  font-size: 25rpx;
  font: bold;
  color: #666666;
  margin-bottom: 10rpx;
  font-family: SimHei;
}

.banner{
  padding: 0px 5px;
  box-sizing: border-box;
  
}
.science{
  width: 97%;
}
.detailsci{
  display: flex;
  flex-direction: row;
  margin-bottom: 25rpx;
  height: 180rpx;
  width: 100%;
}
.detailsci image{
  flex: 1;
  height: 180rpx;
  border-radius: 5%;
}
.detailtext{
  flex: 3;
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  line-height: 40rpx;
}

.text2 {
    width: 395rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; /*两行,超出为省略号*/
    -webkit-box-orient: vertical;
    align-content: center;
    font-size: 28rpx;
    color: #666666;
    line-height: 40rpx;
    margin-top: 15rpx;
}



