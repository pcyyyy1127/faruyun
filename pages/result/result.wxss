/* pages/stress/stress.wxss */
.str {
  height: 304rpx;
  color: #ffffff;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.str-tit-img {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  z-index: -1;
}
.str-tit {
  padding-top: 60rpx;
  font-size: 20px;
  font-weight: bold;
}


.str-con {
  margin: 0 15rpx;
  border: 1px solid #999999;
  border-radius: 4rpx;
  top: -60rpx;
  position: relative;
  background-color: #fff;
}
.str-con-item {
  border: 1px solid #D09363;
  border-radius: 2rpx;
  background-color: #fafafa;
  margin: 20rpx;
}
.str-con-item-tit {
  width: 100%;
  line-height: 44rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 15rpx;
  color: #9C5052;
  font-weight: bold;
}
.str-con-item-con {
  color: #666666;
  padding: 50rpx 20rpx;
  font-size: 30rpx;
  line-height: 45rpx;
}
.str-con-item-title {
  color: #666666;
  padding-top: 10rpx;
  text-align: center;
  font-size: 30rpx;
  line-height:45rpx;
}

.str-aly{
  margin: 24rpx 15rpx;
  border: 1px solid #999999;
  border-radius: 4rpx;
  color: #bbbbbb;
  font-size: 14px;
  line-height: 56rpx;
  padding: 8rpx;
}

.str-btn-box {
  text-align: center;
  /* display: flex;
  justify-content: center; */
}
.str-btn {
  display: inline-block;
  width: 300rpx;
  line-height: 92rpx;
  background-color: #9C5052;
  color: #333333;
  font-size: 20px;
  border-radius: 40rpx;
  text-align: center;
}
.progress-box{
  position: relative;
  width:100%;
  height: 160px;  
  display: flex;  
  align-items: center;
  justify-content: center;
}
.progress-bg{
  position: absolute;
    width:180px;
  height: 160px; 
  
}
.progress-canvas{ 
  width:180px;
  height: 160px; 
} 
.progress-txt{ 
  position: absolute; 
  display: flex;  
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-top: 20rpx;
  color: #B5484B;
}